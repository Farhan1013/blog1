<%@post.comments.each do |comment| %>
	<div><%=comment.author %></div>
	<div><%=comment.comment %></div>

	<%end%>

	<h2>NEW Comment</h2>
	<%= form_for(@comment, :url => {:action => :new_comment, :controller => :posts}) do |f| %>
	
    <!--Adding in secret sauce post id so that we can put the comment where it belongs-->
    <%= hidden_field_tag :post_id, @post.id %>

	<div class="field">
		<%= f.label :author %><br>
		 <%= f.text_field :author, :class => 'form-control' %>
	</div>
	<div class="field">
		<%= f.label :comment %><br>
		<%= f.text_area :comment, :class => 'form-control' %> <br>
	</div>
	<div class="actions">
		<%= f.submit :class => 'btn btn-primary'%>
	</div>

	<%= link_to 'back to post', post_path %>

	<% end %>

