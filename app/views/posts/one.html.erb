


	<%= link_to 'back to post', post_path, :class => 'btn btn-primary' %>
	
	<h2> Comments</h2>
	<%= form_for(@comment, :url => {:action => :new_comment, :controller => :posts}) do |f| %>
	
    <!--Adding in secret sauce post id so that we can put the comment where it belongs-->
    <%= hidden_field_tag :post_id, @post.id %>

	<div class="field">
		 <%= f.text_field :author, :class => 'form-control', :placeholder => 'Your name' %>
	</div>
	<br>
	<br>
	<div class="field">
		<%= f.text_area :comment, :class => 'form-control', :placeholder => 'What do you have to say?'  %> <br>
	</div>
	<div class="actions">
		<%= f.submit :class => 'btn btn-primary'%>
	</div>
	<br>

	<% end %>

<%@post.comments.each do |comment| %>
	<div><%=comment.author %></div>
	<div><%=comment.comment %></div>

	<%end%>
