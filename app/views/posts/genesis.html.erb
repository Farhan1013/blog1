<%= form_for(@post, :url => {:action => :genesis_post, :controller => :posts} ) do |f| %>

<div class="field">
	<%=f.label :title %><br>
	<%=f.text_field :title, :class => 'form-control', :placeholder => 'title' %>


<div class="field">	
	<%=f.label :body %><br>
	<%=f.text_field :body, :class => 'form-control', :placeholder => '...' %>
</div>
<div class="actions">
	<%=f.submit  :class => 'btn btn-primary' %>
</div>
</div>

<% end %>
